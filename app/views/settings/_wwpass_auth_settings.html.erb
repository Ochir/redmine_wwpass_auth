<% flash.now[:error] = "#{l("label_wwpass_sp_cert")} #{l("activerecord.errors.messages.blank")}" if @settings['wwpass_sp_cert'].blank? %>
<% flash.now[:error] = "#{l("label_wwpass_sp_key")} #{l("activerecord.errors.messages.blank")}" if @settings['wwpass_sp_key'].blank? %>
<% flash.now[:error] = "#{l("label_wwpass_ca_cert")} #{l("activerecord.errors.messages.blank")}" if @settings['wwpass_ca_cert'].blank? %>

<table>
  <tbody>
    <tr>
      <th><%= l(:label_wwpass_sp_cert) %><span class="required"> *</span></th>
      <td>
        <input  type="text" id="settings_wwpass_sp_cert" 
                value="<%= settings['wwpass_sp_cert'] %>" 
                name="settings[wwpass_sp_cert]" 
                size="50"> 
      </td>
    </tr>
    <tr>
      <th><%= l(:label_wwpass_sp_key) %><span class="required"> *</span></th>
      <td>
        <input  type="text" id="settings_wwpass_sp_key" 
                value="<%= settings['wwpass_sp_key'] %>" 
                name="settings[wwpass_sp_key]" 
                size="50"> 
      </td>
    </tr>
    <tr>
      <th><%= l(:label_wwpass_ca_cert) %><span class="required"> *</span></th>
      <td>
        <input  type="text" id="settings_wwpass_ca_cert" 
                value="<%= settings['wwpass_ca_cert'] %>" 
                name="settings[wwpass_ca_cert]" 
                size="50"> 
      </td>
    </tr>
  </tbody>
</table>